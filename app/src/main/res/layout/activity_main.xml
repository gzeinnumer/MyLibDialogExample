<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_confirm_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Dialog" />

    <Button
        android:id="@+id/btn_info_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Dialog" />

    <Button
        android:id="@+id/btn_number_picker_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Picker Dialog" />

    <Button
        android:id="@+id/btn_loading_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading Dialog" />

    <Button
        android:id="@+id/btn_single_date_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Date Dialog" />

    <Button
        android:id="@+id/btn_multi_date_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Date Dialog" />

</LinearLayout>